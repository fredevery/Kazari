{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022"
    ],
    "outDir": "dist/main",
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "include": [
    "src/main/**/*",
    "src/shared/**/*"
  ],
  "exclude": [
    "src/renderer",
    "src/preload",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}